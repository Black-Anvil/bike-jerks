<div class="content blog {% render 'content-classes', scope: section %}">
  <div class="inner with-layout-options {{ settings.content_layout }}">
    {% render 'blog' %}
    <div class="article">
      {% liquid
        render 'post'
        render 'article-nav'
        render 'article-comment'
        render 'article-related'
      %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-article.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "facebook_sharing_articles",
      "label": "t:sections.main-article.settings.facebook_sharing_articles.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "twitter_sharing_articles",
      "label": "t:sections.main-article.settings.twitter_sharing_articles.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "pinterest_sharing_articles",
      "label": "t:sections.main-article.settings.pinterest_sharing_articles.label",
      "info": "t:sections.main-article.settings.pinterest_sharing_articles.info",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.settings.header.content"
    },
    {
      "type": "checkbox",
      "id": "show_background",
      "label": "t:sections.settings.show_background.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "expanded",
      "label": "t:sections.settings.expanded.label",
      "default": true
    }
  ]
}
{% endschema %}